{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "clean": "rm -rf node_modules .next coverage playwright-report test-results",
    "dev": "next dev",
    "postinstall": "pnpm exec simple-git-hooks",
    "lint": "next lint",
    "pnpm:install": "pnpm install",
    "pnpm:reinstall": "pnpm run clean && pnpm install",
    "pnpm:update": "pnpm update --latest --interactive --recursive",
    "prettier": "prettier --write --ignore-unknown .",
    "prettier:check": "prettier --check --ignore-unknown .",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:e2e": "playwright test",
    "test:e2e:show-report": "pnpm exec playwright show-report",
    "test:watch": "jest --watch"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-packagejson",
      "prettier-plugin-tailwindcss"
    ],
    "trailingComma": "all"
  },
  "dependencies": {
    "next": "14.1.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vercel/style-guide": "^6.0.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-only-warn": "^1.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-packagejson": "^2.4.12",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "simple-git-hooks": "^2.10.0",
    "tailwindcss": "^3.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
